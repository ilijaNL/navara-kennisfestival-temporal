# Build the docker image with `npx nx docker-build fulfillment`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t fulfillment`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system fulfillment && \
  adduser --system -G fulfillment fulfillment

COPY dist/apps/fulfillment fulfillment/
RUN chown -R fulfillment:fulfillment .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix fulfillment --omit=dev -f install

CMD [ "node", "fulfillment" ]
